{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "es2022",
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
